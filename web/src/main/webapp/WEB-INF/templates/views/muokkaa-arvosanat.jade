form(ng-submit="saveArvosanat()")
table(class="table table-condensed")
  thead
    th(oph-msg="suoritusrekisteri.muokkaa.arvosanat.oppiaine") Oppiaine
    th(oph-msg="suoritusrekisteri.muokkaa.arvosanat.lisatieto") Lisätieto (kieli)
    th(oph-msg="suoritusrekisteri.muokkaa.arvosanat.arvosana") Arvosana
    th(oph-msg="suoritusrekisteri.muokkaa.arvosanat.valinnainen") 1. Valinnainen
    th(oph-msh="suoritusrekisteri.muokkaa.arvosanat.toinenvalinnainen") 2. valinnainen
    th(oph-msh="suoritusrekisteri.muokkaa.arvosanat.toinenvalinnainen") 3. valinnainen
  tbody
    tr(ng-repeat="aineRivi in suorituksenArvosanataulukko" class="{{aineRivi.rowClass}}")
      td
        span {{aineRivi.aineNimi || aineRivi.aine}}
        span(ng-show="suoritus.valmistuminen != aineRivi.myonnetty") ({{aineRivi.myonnetty}})
      td
        select(ng-show="aineRivi.aine == 'AI'" class="form-control input-sm smallInline" ng-model="aineRivi.lisatieto" ng-options="k.value as k.text for k in aidinkieli")
        select(ng-show="aineRivi.hasKielisyys" class="form-control input-sm smallInline" ng-model="aineRivi.lisatieto" ng-options="k.value as k.text for k in kielet")
      td
        span(ng-repeat="pakollinen in aineRivi.pakolliset")
          select(class="form-control smallInline" ng-model="pakollinen.arvio.arvosana" required="required" ng-options="a.value as a.text for a in arvosanat")
      td(style="white-space: nowrap;")
        select(class="form-control smallInline" ng-show="aineRivi.valinnaiset[0]" ng-model="aineRivi.valinnaiset[0].arvio.arvosana" required="required" ng-options="a.value as a.text for a in arvosanat")
      td(style="white-space: nowrap;")
        select(class="form-control smallInline" ng-show="aineRivi.valinnaiset[1]" ng-model="aineRivi.valinnaiset[1].arvio.arvosana" required="required" ng-options="a.value as a.text for a in arvosanat")
      td(style="white-space: nowrap;")
        select(class="form-control smallInline" ng-show="aineRivi.valinnaiset[2]" ng-model="aineRivi.valinnaiset[2].arvio.arvosana" required="required" ng-options="a.value as a.text for a in arvosanat")

div(ng-show="info.editable" class="input-group")
  select(class="form-control input-sm smallInline" ng-model="info.korotusAine" ng-options="k.aine as k.text for k in korotusAineet")
div(ng-show="info.editable" class="input-group")
  input(type="text" class="form-control input-sm datepicker smallInline" ng-disabled="info.delete" ng-model="info.korotusPvm" title="Syötä päivä muodossa 1.1.2014 (ilman etunollia)"
    datepicker-popup="{{format}}"
    datepicker-options="dateOptions"
    datepicker-append-to-body="true"
    is-open="korotusOpen"
    ng-click="korotusOpen = true"
    show-button-bar="false")
  span(class="input-group-btn")
    button(class="btn btn-default btn-sm" type="button" ng-click="info.korotusPvm = null")
      span(class="glyphicon glyphicon-remove")
div(ng-show="info.editable" class="input-group")
  button(type="button" class="btn btn-default btn-xs" ng-click="addKorotus()")
    span() Lisää uusi korotus
    span(class="glyphicon glyphicon-plus")
